					SLEEP(5)
					BTN(LEFT,CLICK,300,300,600)//ポインタ初期化
					BREAK
					ENDIF
					WEND
					FEND//

					PROCEDURE DEATH()//ドレイクで経験値0になるまで死亡LOOP
					WHILE TRUE
					IF !CHKIMG("EXP0")
					WEND
						

WEND
