//=========================================
// init
//=========================================

//Parallel Program 
thread parallelProgram()
//Move Window initSetting x = 1 , y = 1 
ACW(GETID("MapleStory","MapleStoryClass"),1,1)
//File import
CALL ../Common/Skill/UseSkillFiveJob.uws

//=========================================
//	Main Script Start
//=========================================

while TRUE
	
	//時刻の取得     : 3分経過していたらスキルをかかけなおす
	reUseSkillTime = GETTIME( 180 / 86400 )
	useSkill()

	while true

		upAttack()

		//最上段にいた場合、下りながら攻撃
		ifb chkimg("../picture/黄点.bmp",0,68,92,137,111)
			for downAtk = 1 to 3
				downAttack()
			next
		endif

		skillCheck()
		sleep(0.1)
		checkYelloPoint()

		//最下段にいた場合は上へいきながら攻撃
		ifb chkimg("../picture/黄点.bmp",0,58,144,147,156)
			for upAtk = 1 to 3
				upAttack()
			next
		endif
		//3分経過していたらループを抜け出す
		if GETTIME() > reUseSkillTime then break
	wend
wend

//=========================================
// Support Function
//=========================================

//=========================================
//
// comment : 石化と他プレイヤー検知時Beep　並列処理
// param   : None
// return  : 0 
//
//=========================================
procedure parallelProgram()
	while TRUE
		ifb chkimg("../picture/石化.BMP",0,0,0,800,600)
			for i = 1 to 20
				KBD(VK_LEFT,0,100)
				KBD(VK_RIGHT,0,100)
			next
		endif

		ifb chkimg("../picture/赤点.BMP",0,0,0,800,600)
			for beeps = 1 to 10
				SOUND("E:\jubeat_analyser150530\fumen\bgm\Lisa-RICCIA.mp3")
				sleep(0.2)
			next
		endif	
	wend
fend

//=========================================
//
// comment : 黄点の場所を取得する
// param   : None
// return  : 0 
//
//=========================================

function checkYelloPoint()

	ifb chkimg("../picture/黄点.bmp",0,100,91,158,162)
		//はしごに捕まっているときを考慮して少しだけ上を押す
		KBD(VK_UP,1,10)
		KBD(VK_UP,2,1500)
		KBD(VK_LEFT,1,100)
		catchTrue = GETTIME( 10 / 86400 )
		while TRUE
			ifb GETTIME() > catchTrue
				KBD(VK_LEFT,2,300)
				KBD(VK_UP,1,500)
				KBD(VK_UP,2,1500)
				KBD(VK_LEFT,1,300)
				catchTrue = GETTIME( 10 / 86400 )
			endif

			ifb chkimg("../picture/黄点.bmp",0,0,0,85,162)
				KBD(VK_LEFT,2,500)
				break
			endif
		wend
	endif

	ifb chkimg("../picture/黄点.bmp",0,0,0,82,162)
		KBD(VK_RIGHT,1,100)
		KBD(VK_RIGHT,2,500)
	endif
	//initPoint()

	result = 0
fend

function initPoint()
	KBD(VK_RIGHT,1,1000)
	KBD(VK_SPACE,0,500)
	KBD(VK_SPACE,0,500)
	KBD(VK_SPACE,0,500)
	KBD(VK_RIGHT,2,1000)
	KBD(VK_LEFT,1,500)
	KBD(VK_SPACE,0,800)
	KBD(VK_LEFT,2,1000)
	KBD(VK_UP,1,800)
	KBD(VK_SPACE,0,800)
	KBD(VK_SPACE,0,800)
	result = 0
fend

//=========================================
//
// comment : 攻撃処理
// param   : None
// return  : 0 
//
//=========================================

function upAttack()
	//skillCheck関数でやると判定が遅れるのでいったんこっち
	IFB CHKIMG("../picture/モード.bmp",0,0,0,800,600)
		KBD(VK_O,0,500)
		KBD(VK_T,0,1000)
	ENDIF
	KBD(VK_X,0,200)
	KBD(VK_UP,1,200)
	KBD(VK_SPACE,0,200)
	KBD(VK_SPACE,0,200)
	KBD(VK_UP,2,50)
	KBD(VK_X,0,200)
	KBD(VK_X,0,200)
	result = 0
fend

function downAttack()
	//skillCheck関数でやると判定が遅れるのでいったんこっち
	IFB CHKIMG("../picture/モード.bmp",0,0,0,800,600)
		KBD(VK_O,0,500)
		KBD(VK_T,0,1000)
	ENDIF
	KBD(VK_X,0,200)
	KBD(VK_DOWN,1,200)
	KBD(VK_SPACE,0,200)
	KBD(VK_SPACE,0,100)
	KBD(VK_DOWN,2,50)
	KBD(VK_X,0,200)
	KBD(VK_X,0,200)
	result = 0
fend

function skillCheck()

	IF CHKIMG("../picture/扉.BMP",0,0,0,800,600) THEN KBD(VK_T,0,500)
	IF CHKIMG("../picture/パニシング.BMP",0,0,0,800,600) THEN KBD(VK_Q,0,500)

	result = 0
fend
