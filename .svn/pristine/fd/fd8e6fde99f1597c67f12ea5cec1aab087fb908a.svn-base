THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G = 3

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団中級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団中級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//▼▼Gが2を超えたら補助スキルを使い、Gを0に戻す▼▼
IFB G > 2
KBD(VK_G,0,1000)
SLEEP(1)
G = 0
ENDIF

//▼▼上段にいた場合は下ジャンプ▼▼
IFB CHKIMG("../画像/黄点.BMP",0,0,0,200,130)
KBD(VK_DOWN,1,1000)
KBD(VK_C,0,200)
KBD(VK_DOWN,2,200)
ENDIF

KBD(VK_LEFT,1,1000)
KBD(VK_LEFT,2,100)
KBD(VK_CTRL,0,300)

WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,45,200)
KBD(VK_LEFT,1,1000)
KBD(VK_LEFT,2,900)
KBD(VK_CTRL,0)

//▼▼上段にいた場合は下ジャンプ▼▼
IFB CHKIMG("../画像/黄点.BMP",0,0,0,140,130)
KBD(VK_DOWN,1,1000)
KBD(VK_C,0,200)
KBD(VK_DOWN,2,200)
ENDIF

IF CHKIMG("../画像/カニングスクエアロビー.BMP",0,0,0,210,150) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND

KBD(VK_RIGHT,1,1000)
KBD(VK_RIGHT,2,100)
KBD(VK_CTRL,0,300)

WHILE CHKIMG("../画像/黄点.BMP",0,0,0,150,200)
KBD(VK_RIGHT,1,1000)
KBD(VK_RIGHT,2,900)
KBD(VK_CTRL,0)

IF CHKIMG("../画像/カニングスクエアロビー.BMP",0,0,0,210,150) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND

G = G + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲


WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND