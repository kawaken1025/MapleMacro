ACW(GETID("MapleStory","MapleStoryClass"),1,1)

THREAD 並列処理()

//変数処理
PET = 0
KISHIN = 0
MIGIMON = 0

WHILE TRUE //左端へ


IFB PET > 5
KBD(VK_G,0,1000)
SLEEP(3)
KBD(VK_T,0,1000)
PET = 0
ENDIF

KBD(VK_G,0,1000)
SLEEP(1.2)
KBD(VK_J,0,800)


KBD(VK_H,0,1500)

	FOR ATTACK = 1 TO 2
	
		IFB KISHIN > 1
		KBD(VK_H,0,1000)
		KISHIN = 0
		
		//左の敵を処理する
		KBD(VK_LEFT,1,300)
		KBD(VK_SPACE,0,1000)
		KBD(VK_SPACE,0,1500)
		KBD(VK_LEFT,2,500)
		霊力回復()
		KBD(VK_SHIFT,0,1000)
		SLEEP(1)
		KBD(VK_RIGHT,1,300)
		KBD(VK_SPACE,0,1000)
		KBD(VK_SPACE,0,1500)
		KBD(VK_RIGHT,2,500)
		ENDIF

		IF CHKIMG("緑点.BMP",0,0,0,800,600) THEN EXITEXIT
		IF CHKIMG("エリボス.BMP",0,0,0,2000,2000) THEN SOUND("BEEP")

		IFB CHKIMG("黄点.BMP",0,0,0,136,136) //最上段にいた場合下へ
		KBD(VK_DOWN,1,200)
		KBD(VK_C,0,500)
		KBD(VK_C,0,500)
		KBD(VK_DOWN,2,500)
		ENDIF	

		黄点チェック()
		機械室座標()
		IF CHKIMG("gm3.BMP",1,4,510,140,563) THEN CALL GM返答.uws
	
		FOR A = 1 TO 2
		KBD(VK_LEFT,1)
		KBD(VK_LEFT,2,50)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		霊力回復()
		NEXT

		黄点チェック()	
		機械室座標()
		IF CHKIMG("gm3.BMP",1,4,510,140,563) THEN CALL GM返答.uws

		FOR D = 1 to 2
		KBD(VK_RIGHT,1)
		KBD(VK_RIGHT,2,50)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		霊力回復()
		NEXT

		黄点チェック()
		機械室座標()
		IF CHKIMG("gm3.BMP",1,4,510,140,563) THEN CALL GM返答.uws

		FOR Z = 1 TO 2
		KBD(VK_LEFT,1)
		KBD(VK_LEFT,2,50)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		霊力回復()
		NEXT

		黄点チェック()
		機械室座標()
		IF CHKIMG("gm3.BMP",1,4,510,140,563) THEN CALL GM返答.uws

		FOR Z = 1 TO 2
		KBD(VK_RIGHT,1)
		KBD(VK_RIGHT,2,50)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		KBD(VK_A,0,300)
		霊力回復()
		NEXT	
	NEXT


PET = PET + 1
KISHIN = KISHIN + 1


WEND


PROCEDURE 並列処理()
WHILE TRUE

IFB CHKIMG("石化.BMP",0,0,0,800,600)
FOR X = 1 TO 20
KBD(VK_LEFT,0,100)
KBD(VK_RIGHT,0,100)
NEXT
ENDIF



WEND
FEND

PROCEDURE 霊力回復()

	IFB CHKIMG("霊力回復.BMP",0,590,500,800,600)
	KBD(VK_INSERT,0,300)
	KBD(VK_U,0,800)
	//KBD(VK_INSERT,0,500)
	ENDIF

FEND

PROCEDURE 黄点チェック()

	IFB CHKIMG("黄点.BMP",0,0,0,76,180)
	KBD(VK_RIGHT,1,500)
	KBD(VK_RIGHT,2,2000)
	ENDIF
	
	IFB CHKIMG("150back.BMP",0,0,0,800,600)
	KBD(VK_DOWN,1,500)
	KBD(VK_DOWN,2,2000)
	KBD(VK_LEFT,1,300)
	KBD(VK_LEFT,2,800)
	ENDIF

	IFB CHKIMG("黄点.BMP",0,105,145,130,180)
	KBD(VK_LEFT,1,500)
	KBD(VK_LEFT,2,2000)
	ENDIF

FEND

PROCEDURE 機械室座標()

	IFB CHKIMG("黄点.BMP",0,60,145,125,160)
	KBD(VK_DOWN,1,500)
	KBD(VK_C,0,500)
	KBD(VK_C,0,500)
	KBD(VK_C,0,300)
	KBD(VK_C,0,300)
	KBD(VK_DOWN,2)
	ENDIF

	IFB CHKIMG("黄点.BMP",0,60,165,130,180)
	KBD(VK_UP,1,500)
	KBD(VK_SPACE,0,800)
	KBD(VK_UP,2,300)
	ENDIF


FEND